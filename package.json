{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/stephenwade/festival.git"
  },
  "scripts": {
    "start": "web-dev-server --node-resolve",
    "lint:js": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:css": "npx stylelint \"**/*.js\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:css",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:stylelint": "npx stylelint \"**/*.js\" --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.json\" --write --ignore-path .prettierignore",
    "format": "npm run format:eslint; npm run format:stylelint; npm run format:prettier",
    "imagemin:png": "imagemin images/*.png --out-dir=images --plugin.webp.quality=100",
    "imagemin:jpg": "imagemin images/*.jpg --out-dir=images --plugin.webp.quality=80",
    "imagemin": "npm run imagemin:png && npm run imagemin:jpg",
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c rollup.config.js",
    "start:build": "web-dev-server --root-dir dist",
    "deploy:site": "rsync -rltv --delete --exclude goaccess dist/ $FESTIVAL_SITE_DEPLOY_LOCATION",
    "deploy:media": "az storage blob sync --container '$web' --source media --exclude-pattern '*.json' --account-name=\"$FESTIVAL_AZURE_STORAGE_ACCOUNT\" --account-key=\"$FESTIVAL_AZURE_STORAGE_KEY\"",
    "deploy": "npm run deploy:site && npm run deploy:media"
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "lit-element": "^2.4.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "standardized-audio-context": "^25.1.6"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.9.4",
    "@open-wc/eslint-config": "^4.2.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@web/dev-server": "^0.1.3",
    "deepmerge": "^4.2.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "husky": "^4.3.7",
    "imagemin": "^7.0.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-webp": "^6.0.0",
    "koa-range": "^0.3.0",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "rollup": "^2.36.1",
    "rollup-plugin-copy": "^3.3.0",
    "stylelint": "^13.8.0",
    "stylelint-config-hudochenkov": "^5.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,html}": [
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{js,json,html,css,md}": "prettier --write"
  }
}
