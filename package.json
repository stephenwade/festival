{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "scripts": {
    "start": "es-dev-server --port 8080 --node-resolve --compatibility none --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "imagemin": "imagemin --plugin.webp.quality=100 images/* --out-dir=images",
    "build": "rm -rf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && es-dev-server --port 8080 --root-dir dist --compatibility none",
    "deploy:site": "rsync -rltv --delete --exclude=.htaccess --exclude goaccess dist/ $FESTIVAL_SITE_DEPLOY_LOCATION",
    "deploy:media": "az storage blob sync --container '$web' --source media --account-name=\"$FESTIVAL_AZURE_STORAGE_ACCOUNT\" --account-key=\"$FESTIVAL_AZURE_STORAGE_KEY\"",
    "deploy": "npm run deploy:site && npm run deploy:media"
  },
  "dependencies": {
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-spinner": "^3.0.2",
    "@polymer/paper-toast": "^3.0.1",
    "@polymer/polymer": "^3.4.1",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "moment": "^2.25.3",
    "standardized-audio-context": "^23.1.2"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.2.7",
    "@open-wc/eslint-config": "^2.0.6",
    "@rollup/plugin-replace": "^2.3.2",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.50.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "imagemin": "^7.0.1",
    "imagemin-cli": "^5.1.0",
    "imagemin-webp": "^5.1.0",
    "lint-staged": "^10.2.4",
    "prettier": "2.0.5",
    "rollup": "^2.10.5",
    "rollup-plugin-copy": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{js,json,html,css,md}": "prettier --write"
  }
}
