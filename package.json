{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "scripts": {
    "start": "npm run serve | npm run watch",
    "serve": "polymer serve --port 8080",
    "watch": "browser-sync start --proxy localhost:8080 --open --files \"**/*\"",
    "build-test": "polymer build && cp -R media build/es6-bundled/media",
    "build": "polymer build",
    "serve-build": "polymer serve build/es6-bundled",
    "deploy": "npm run deploy:site && npm run deploy:media",
    "deploy:site": "rsync -rltv build/es6-bundled/ $FESTIVAL_SITE_DEPLOY_LOCATION",
    "deploy:media": "az storage blob sync --container '$web' --source media --account-name=\"$FESTIVAL_AZURE_STORAGE_ACCOUNT\" --account-key=\"$FESTIVAL_AZURE_STORAGE_KEY\""
  },
  "dependencies": {
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-spinner": "^3.0.2",
    "@polymer/paper-toast": "^3.0.1",
    "@polymer/polymer": "^3.4.1",
    "@sentry/browser": "^5.15.5",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "moment": "^2.25.0",
    "standardized-audio-context": "^23.1.2"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "src/**/*.js": "polymer lint --input",
    "*.{js,json,html,css,md}": "prettier --write"
  }
}
