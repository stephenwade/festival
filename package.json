{
  "name": "festival-root",
  "description": "Festival root package",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "frontend",
    "admin"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "packageManager": "yarn@3.0.2",
  "scripts": {
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:stylelint": "stylelint \"**/*.js\" \"**/*.html\" --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .prettierignore --loglevel warn",
    "lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .gitignore",
    "format:stylelint": "stylelint \"**/*.js\" \"**/*.html\" --fix --ignore-path .gitignore",
    "format:prettier": "prettier . --write --ignore-path .prettierignore --loglevel warn",
    "format": "yarn format:eslint; yarn format:stylelint; yarn format:prettier"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "6.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-lit": "1.6.0",
    "eslint-plugin-lit-a11y": "1.1.0",
    "eslint-plugin-no-only-tests": "2.6.0",
    "eslint-plugin-wc": "1.3.2",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-hudochenkov": "5.0.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "22.0.0",
    "stylelint-order": "4.1.0"
  },
  "lint-staged": {
    "*.{js,cjs,html}": "eslint --fix",
    "*.{js,html}": "stylelint --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
