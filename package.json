{
  "name": "festival-root",
  "description": "Festival root package",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "frontend",
    "admin"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "lint:eslint": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:stylelint": "stylelint \"**/*.js\" \"**/*.html\" --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .prettierignore --loglevel warn",
    "lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .gitignore",
    "format:stylelint": "stylelint \"**/*.js\" \"**/*.html\" --fix --ignore-path .gitignore",
    "format:prettier": "prettier . --write --ignore-path .prettierignore --loglevel warn",
    "format": "yarn format:eslint; yarn format:stylelint; yarn format:prettier"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "9.2.0",
    "@playwright/test": "1.29.2",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-lit": "1.8.0",
    "eslint-plugin-lit-a11y": "2.3.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-wc": "1.4.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "playwright": "1.29.2",
    "postcss-syntax": "0.36.2",
    "prettier": "2.8.2",
    "stylelint": "14.16.1",
    "stylelint-config-hudochenkov": "8.0.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "stylelint-order": "6.0.1"
  },
  "lint-staged": {
    "*.{js,cjs,html}": "eslint --fix",
    "*.{js,html}": "stylelint --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
