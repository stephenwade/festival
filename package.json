{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "packageManager": "yarn@3.2.3",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint:eslint": "eslint . --ignore-path .lintignore --max-warnings 0",
    "lint:stylelint": "stylelint \"**/*.css\" --ignore-path .lintignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .lintignore --loglevel warn",
    "lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .lintignore",
    "format:stylelint": "stylelint \"**/*.css\" --fix --ignore-path .lintignore",
    "format:prettier": "prettier . --write --ignore-path .lintignore --loglevel warn",
    "format": "yarn format:eslint; yarn format:stylelint; yarn format:prettier"
  },
  "dependencies": {
    "@remix-run/node": "1.7.0",
    "@remix-run/react": "1.7.0",
    "@remix-run/serve": "1.7.0",
    "isbot": "3.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "supports-webp": "2.0.1"
  },
  "devDependencies": {
    "@playwright/test": "1.25.1",
    "@remix-run/dev": "1.7.0",
    "@remix-run/eslint-config": "1.7.0",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "esbuild-register": "3.3.3",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-no-only-tests": "3.0.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.11.0",
    "stylelint-config-hudochenkov": "8.0.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.8.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
