{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint:eslint": "eslint . --ignore-path .lintignore --max-warnings 0",
    "lint:stylelint": "stylelint \"**/*.css\" --ignore-path .lintignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .lintignore --loglevel warn",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .lintignore",
    "format:stylelint": "stylelint \"**/*.css\" --fix --ignore-path .lintignore",
    "format:prettier": "prettier . --write --ignore-path .lintignore --loglevel warn",
    "format": "pnpm format:eslint; pnpm format:stylelint; pnpm format:prettier"
  },
  "dependencies": {
    "@prisma/client": "4.14.0",
    "@remix-run/node": "1.9.0",
    "@remix-run/react": "1.9.0",
    "@remix-run/serve": "1.9.0",
    "@remix-validated-form/with-zod": "2.0.5",
    "date-fns": "2.29.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "9.1.1",
    "remix-validated-form": "4.6.11",
    "standardized-audio-context": "25.3.36",
    "supports-webp": "3.0.0",
    "use-local-storage-state": "18.1.2",
    "usehooks-ts": "2.9.1",
    "zod": "3.21.4",
    "zod-form-data": "2.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.9.0",
    "@remix-run/eslint-config": "1.9.0",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "esbuild": "0.16.10",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-unicorn": "45.0.2",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "prisma": "4.14.0",
    "stylelint": "15.0.0",
    "stylelint-config-hudochenkov": "9.0.0",
    "stylelint-config-standard": "30.0.1",
    "stylelint-order": "6.0.2",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.prisma": "prisma format --schema",
    "*": "prettier --ignore-unknown --write --ignore-path .lintignore"
  }
}
