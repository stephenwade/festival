{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/stephenwade/festival.git"
  },
  "scripts": {
    "start": "es-dev-server --node-resolve",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .prettierignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "imagemin:png": "imagemin images/*.png --out-dir=images --plugin.webp.quality=100",
    "imagemin:jpg": "imagemin images/*.jpg --out-dir=images --plugin.webp.quality=80",
    "imagemin": "npm run imagemin:png && npm run imagemin:jpg",
    "build": "rm -rf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && es-dev-server --root-dir dist",
    "deploy:site": "rsync -rltv --delete --exclude goaccess dist/ $FESTIVAL_SITE_DEPLOY_LOCATION",
    "deploy:media": "az storage blob sync --container '$web' --source media --exclude-pattern '*.json' --account-name=\"$FESTIVAL_AZURE_STORAGE_ACCOUNT\" --account-key=\"$FESTIVAL_AZURE_STORAGE_KEY\"",
    "deploy": "npm run deploy:site && npm run deploy:media"
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "lit-element": "^2.4.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "standardized-audio-context": "^25.0.5"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.9.0",
    "@open-wc/eslint-config": "^3.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.4",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "imagemin": "^7.0.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-webp": "^6.0.0",
    "koa-range": "^0.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "2.1.2",
    "rollup": "^2.28.2",
    "rollup-plugin-copy": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{js,json,html,css,md}": "prettier --write"
  }
}
