{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "scripts": {
    "prepare": "husky install; prisma generate",
    "build": "doppler run -- remix build",
    "dev": "doppler run -- remix dev",
    "start": "doppler run -- remix-serve build",
    "prisma": "doppler run -- prisma",
    "lint:eslint": "eslint . --ignore-path .lintignore --max-warnings 0",
    "lint:stylelint": "stylelint \"**/*.css\" --ignore-path .lintignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .lintignore --loglevel warn",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .lintignore",
    "format:stylelint": "stylelint \"**/*.css\" --fix --ignore-path .lintignore",
    "format:prettier": "prettier . --write --ignore-path .lintignore --loglevel warn",
    "format": "pnpm format:eslint; pnpm format:stylelint; pnpm format:prettier"
  },
  "dependencies": {
    "@azure/storage-blob": "12.14.0",
    "@clerk/remix": "2.6.16",
    "@prisma/client": "4.16.2",
    "@remix-run/node": "1.18.1",
    "@remix-run/react": "1.18.1",
    "@remix-run/serve": "1.18.1",
    "@remix-validated-form/with-zod": "2.0.6",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "9.1.3",
    "remix-utils": "6.5.0",
    "remix-validated-form": "5.0.2",
    "standardized-audio-context": "25.3.53",
    "use-local-storage-state": "18.3.3",
    "usehooks-ts": "2.9.1",
    "zod": "3.21.4",
    "zod-form-data": "2.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.18.1",
    "@remix-run/eslint-config": "1.18.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "eslint": "8.44.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unicorn": "47.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prisma": "4.16.2",
    "stylelint": "15.9.0",
    "stylelint-config-hudochenkov": "9.0.0",
    "stylelint-config-standard": "33.0.0",
    "stylelint-order": "6.0.3",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.prisma": "prisma format --schema",
    "*": "prettier --ignore-unknown --write --ignore-path .lintignore"
  }
}
