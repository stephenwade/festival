{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint:eslint": "eslint . --ignore-path .lintignore --max-warnings 0",
    "lint:stylelint": "stylelint \"**/*.css\" --ignore-path .lintignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .lintignore --loglevel warn",
    "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .lintignore",
    "format:stylelint": "stylelint \"**/*.css\" --fix --ignore-path .lintignore",
    "format:prettier": "prettier . --write --ignore-path .lintignore --loglevel warn",
    "format": "npm run format:eslint; npm run format:stylelint; npm run format:prettier"
  },
  "dependencies": {
    "@remix-run/node": "1.7.2",
    "@remix-run/react": "1.7.2",
    "@remix-run/serve": "1.7.2",
    "date-fns": "2.29.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "standardized-audio-context": "25.3.32",
    "supports-webp": "3.0.0",
    "use-local-storage-state": "18.1.1"
  },
  "devDependencies": {
    "@playwright/test": "1.27.1",
    "@remix-run/dev": "1.7.2",
    "@remix-run/eslint-config": "1.7.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "esbuild-register": "3.3.3",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-no-only-tests": "3.0.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.14.0",
    "stylelint-config-hudochenkov": "8.0.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "29.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
