{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "scripts": {
    "prepare": "husky install; prisma generate",
    "build": "remix build",
    "dev": "doppler run -- remix dev",
    "start": "remix-serve build",
    "lint:eslint": "eslint . --ignore-path .lintignore --max-warnings 0",
    "lint:stylelint": "stylelint \"**/*.css\" --ignore-path .lintignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .lintignore --log-level warn",
    "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
    "format:eslint": "eslint . --fix --ignore-path .lintignore",
    "format:stylelint": "stylelint \"**/*.css\" --fix --ignore-path .lintignore",
    "format:prettier": "prettier . --write --ignore-path .lintignore --log-level warn",
    "format": "npm run format:eslint; npm run format:stylelint; npm run format:prettier",
    "test": "playwright test",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@azure/storage-blob": "12.16.0",
    "@clerk/remix": "2.10.3",
    "@prisma/client": "5.3.1",
    "@remix-run/node": "1.19.3",
    "@remix-run/react": "1.19.3",
    "@remix-run/serve": "1.19.3",
    "@remix-validated-form/with-zod": "2.0.7",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "9.1.3",
    "remix-utils": "6.6.0",
    "remix-validated-form": "5.1.5",
    "standardized-audio-context": "25.3.57",
    "use-local-storage-state": "18.3.3",
    "usehooks-ts": "2.9.1",
    "zod": "3.22.3",
    "zod-form-data": "2.0.2"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.38.1",
    "@playwright/test": "1.38.1",
    "@remix-run/dev": "1.19.3",
    "@remix-run/eslint-config": "1.19.3",
    "@types/react": "18.2.24",
    "@types/react-dom": "18.2.8",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unicorn": "48.0.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "prisma": "5.3.1",
    "stylelint": "15.10.3",
    "stylelint-config-hudochenkov": "9.0.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-order": "6.0.3",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.prisma": "prisma format --schema",
    "*": "prettier --ignore-unknown --write --ignore-path .lintignore"
  }
}
