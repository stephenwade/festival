{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenwade/festival.git"
  },
  "type": "module",
  "scripts": {
    "prepare": "husky; prisma generate",
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "lint:dpdm": "dpdm 'app/routes/*' --no-tree --no-warning --exit-code circular:1",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:knip": "knip",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --log-level warn",
    "lint:stylelint": "stylelint \"**/*.css\" --ignore-path .gitignore --max-warnings 0",
    "lint:tsc": "tsc",
    "lint": "npm-run-all lint:*",
    "format:eslint": "eslint . --max-warnings=0 --fix",
    "format:knip": "knip --fix",
    "format:prettier": "prettier . --write --ignore-path .gitignore --log-level warn",
    "format:stylelint": "stylelint \"**/*.css\" --fix --ignore-path .gitignore --max-warnings 0",
    "format": "npm-run-all format:*",
    "test": "playwright test",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.744.0",
    "@aws-sdk/s3-request-presigner": "3.744.0",
    "@clerk/remix": "4.13.24",
    "@prisma/client": "6.19.1",
    "@remix-run/node": "2.17.2",
    "@remix-run/react": "2.17.2",
    "@remix-run/serve": "2.17.2",
    "@remix-validated-form/with-zod": "2.0.7",
    "nanoid": "5.1.6",
    "node-cache": "5.1.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-timezone-select": "3.2.8",
    "react-toastify": "11.0.5",
    "remix-utils": "7.7.0",
    "remix-validated-form": "5.1.5",
    "standardized-audio-context": "25.3.77",
    "temporal-polyfill": "0.3.0",
    "use-local-storage-state": "19.5.0",
    "usehooks-ts": "3.1.1",
    "zod": "3.25.76",
    "zod-form-data": "2.0.8"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.0",
    "@eslint/js": "9.39.1",
    "@playwright/experimental-ct-react": "1.57.0",
    "@playwright/test": "1.57.0",
    "@remix-run/dev": "2.17.2",
    "@remix-run/fs-routes": "2.17.2",
    "@remix-run/route-config": "2.17.2",
    "@remix-run/testing": "2.17.2",
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/node": "24.9.1",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "dotenv": "17.2.3",
    "dpdm": "3.14.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-playwright": "2.4.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-unused-imports": "4.3.0",
    "husky": "9.1.7",
    "knip": "5.73.3",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "prisma": "6.19.1",
    "stylelint": "16.26.1",
    "stylelint-config-hudochenkov": "12.0.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-order": "7.0.0",
    "svgo": "4.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "use-deep-compare": "1.3.0",
    "vite": "6.4.1",
    "vite-tsconfig-paths": "5.1.4"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.prisma": "prisma format --schema",
    "*.svg": "svgo",
    "*": "prettier --ignore-unknown --write --ignore-path .gitignore"
  }
}
