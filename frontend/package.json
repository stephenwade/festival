{
  "name": "festival",
  "description": "Festival frontend",
  "license": "ISC",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/stephenwade/festival.git"
  },
  "scripts": {
    "start": "web-dev-server",
    "lint": "cd .. && yarn lint",
    "format": "cd .. && yarn format",
    "test:js": "web-test-runner \"test/**/*.test.{js,html}\"",
    "test:e2e": "node test/e2e.js",
    "test": "yarn test:js && yarn test:e2e",
    "imagemin:png": "imagemin images/*.png --out-dir=images --plugin.webp.quality=100",
    "imagemin:jpg": "imagemin images/*.jpg --out-dir=images --plugin.webp.quality=80",
    "imagemin": "yarn imagemin:png && yarn imagemin:jpg",
    "clean": "rm -rf dist",
    "build": "yarn clean && rollup -c rollup.config.js",
    "start:build": "web-dev-server --root-dir dist",
    "deploy:site:script": "rsync -rltv --delete --exclude goaccess dist/ $FESTIVAL_SITE_DEPLOY_LOCATION",
    "deploy:site": "dotenv-run-script ../.env -- deploy:site:script",
    "deploy:media:script": "az storage blob sync --container '$web' --source media --exclude-pattern '*.json' --account-name=\"$FESTIVAL_AZURE_STORAGE_ACCOUNT\" --account-key=\"$FESTIVAL_AZURE_STORAGE_KEY\"",
    "deploy:media": "dotenv-run-script ../.env -- deploy:media:script",
    "deploy": "yarn deploy:site && yarn deploy:media"
  },
  "dependencies": {
    "@vaadin/router": "1.7.4",
    "date-fns": "2.25.0",
    "lit": "2.0.0",
    "pwa-helpers": "0.9.1",
    "redux": "4.1.1",
    "redux-thunk": "2.3.0",
    "standardized-audio-context": "25.3.12"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "1.10.0",
    "@open-wc/testing": "3.0.0-next.5",
    "@open-wc/testing-helpers": "2.0.0-next.3",
    "@playwright/test": "1.14.1",
    "@rollup/plugin-replace": "3.0.0",
    "@web/dev-server": "0.1.24",
    "@web/dev-server-import-maps": "0.0.6",
    "@web/test-runner": "0.13.18",
    "@web/test-runner-commands": "0.5.13",
    "@web/test-runner-mocha": "0.7.4",
    "@web/test-runner-playwright": "0.8.8",
    "chai": "4.3.4",
    "concurrently": "6.3.0",
    "deepmerge": "4.2.2",
    "dotenv": "10.0.0",
    "dotenv-run-script": "0.1.0",
    "fetch-mock": "9.11.0",
    "imagemin": "8.0.1",
    "imagemin-cli": "7.0.0",
    "imagemin-webp": "6.0.0",
    "koa-range": "0.3.0",
    "rollup": "2.58.0",
    "rollup-plugin-copy": "3.4.0",
    "sinon": "11.1.2"
  }
}
