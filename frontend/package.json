{
  "name": "festival",
  "description": "Festival",
  "license": "ISC",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/stephenwade/festival.git"
  },
  "scripts": {
    "start": "web-dev-server",
    "lint:js": "eslint . --ignore-path ../.gitignore",
    "lint:css": "stylelint \"**/*.js\" \"**/*.html\" --ignore-path ../.gitignore",
    "lint": "npm run lint:js && npm run lint:css",
    "format:eslint": "eslint . --fix --ignore-path ../.gitignore",
    "format:stylelint": "stylelint \"**/*.js\" \"**/*.html\" --fix --ignore-path ../.gitignore",
    "format:prettier": "prettier . --write --ignore-path ../.prettierignore --loglevel warn",
    "format": "npm run format:eslint; npm run format:stylelint; npm run format:prettier",
    "test:js": "web-test-runner \"test/**/*.test.{js,html}\"",
    "test:e2e": "node test/e2e.js",
    "test": "npm run test:js && npm run test:e2e",
    "imagemin:png": "imagemin images/*.png --out-dir=images --plugin.webp.quality=100",
    "imagemin:jpg": "imagemin images/*.jpg --out-dir=images --plugin.webp.quality=80",
    "imagemin": "npm run imagemin:png && npm run imagemin:jpg",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "rollup -c rollup.config.js",
    "start:build": "web-dev-server --root-dir dist",
    "deploy:site": "rsync -rltv --delete --exclude goaccess dist/ $FESTIVAL_SITE_DEPLOY_LOCATION",
    "deploy:media": "az storage blob sync --container '$web' --source media --exclude-pattern '*.json' --account-name=\"$FESTIVAL_AZURE_STORAGE_ACCOUNT\" --account-key=\"$FESTIVAL_AZURE_STORAGE_KEY\"",
    "deploy": "npm run deploy:site && npm run deploy:media",
    "prepare": "cd .. && husky install"
  },
  "dependencies": {
    "date-fns": "2.21.1",
    "lit-element": "2.4.0",
    "pwa-helpers": "0.9.1",
    "redux": "4.1.0",
    "redux-thunk": "2.3.0",
    "standardized-audio-context": "25.1.15"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "1.10.0",
    "@open-wc/eslint-config": "4.3.0",
    "@open-wc/testing": "2.5.33",
    "@playwright/test": "0.1102.0",
    "@rollup/plugin-replace": "2.4.2",
    "@web/dev-server": "0.1.16",
    "@web/dev-server-import-maps": "0.0.5",
    "@web/test-runner": "0.13.2",
    "@web/test-runner-mocha": "0.7.2",
    "@web/test-runner-playwright": "0.8.5",
    "concurrently": "6.0.2",
    "deepmerge": "4.2.2",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-lit-a11y": "1.0.1",
    "fetch-mock": "9.11.0",
    "husky": "6.0.0",
    "imagemin": "8.0.0",
    "imagemin-cli": "6.0.0",
    "imagemin-webp": "6.0.0",
    "koa-range": "0.3.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rollup": "2.45.2",
    "rollup-plugin-copy": "3.4.0",
    "stylelint": "13.13.0",
    "stylelint-config-hudochenkov": "5.0.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "21.0.0",
    "stylelint-order": "4.1.0"
  },
  "lint-staged": {
    "*.{js,cjs,html}": "eslint --fix",
    "*.{js,html}": "stylelint --fix",
    "*.{js,cjs,json,html,css,md}": "prettier --write"
  }
}
