generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Show {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  sets        Set[]
}

model Set {
  id       String    @id @default(uuid())
  isValid  Boolean
  artist   String?
  start    DateTime?
  duration Float?
  show     Show      @relation(fields: [showId], references: [id])
  showId   String
  file     File?
}

model File {
  id              String  @id @default(uuid())
  isReady         Boolean
  status          String
  filename        String?
  audioUrl        String?
  convertProgress Float?
  errorMessage    String?
  set             Set     @relation(fields: [setId], references: [id])
  setId           String  @unique
}
