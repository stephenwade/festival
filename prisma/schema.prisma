generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Show {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  sets        Set[]
}

model Set {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  artist    String
  start     DateTime
  duration  Int
  show      Show     @relation(fields: [showId], references: [id])
  showId    String
  file      File?
}

model File {
  id              String  @id @default(uuid())
  filename        String?
  audioUrl        String?
  convertProgress Int?
  isReady         Boolean
  status          String
  errorMessage    String?
  set             Set     @relation(fields: [setId], references: [id])
  setId           String  @unique
}
