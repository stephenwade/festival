{
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases"
  ],

  "packageRules": [
    {
      "updateTypes": ["patch"],
      "automerge": true
    },
    {
      "updateTypes": ["minor"],
      "matchCurrentVersion": "!/^[~^]?0/",
      "automerge": true
    }
  ],

  "rangeStrategy": "pin",

  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:weekly"],
    "automerge": true
  }
}
